generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Difficulty {
  dark_souls
  hard
  medium
  easy
}

model DailyTip {
  id            Int       @id @default(autoincrement())
  title         String
  summary       String
  content       String
  image_url     String
  video_url     String
  references    Json
  lastShownDate DateTime?
  isActive      Boolean   @default(false)
}

model Exercises {
  id         Int        @id @default(autoincrement())
  difficulty Difficulty
}
