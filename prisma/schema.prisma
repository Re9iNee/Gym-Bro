generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model DailyTip {
  id            Int       @id @default(autoincrement())
  title         String
  summary       String
  content       String
  image_url     String
  video_url     String
  references    Json
  lastShownDate DateTime?
  isActive      Boolean   @default(false)
}

model Exercise {
  id              Int         @id @default(autoincrement())
  name            String
  video_url       String
  image_url       String
  description     String
  goals           Goal[]
  users           User[]
  focuses         Focus[]
  muscles         Muscle[]
  tips            String[]
  steps           String[]
  alternate_names String[]
  difficulty      Difficulty
  equipments      Equipment[]
}

model User {
  id               Int        @id @default(autoincrement())
  username         String     @unique
  email            String     @unique
  weight           Float?
  height           Float?
  name             String?
  goals            Goal[]
  gender           String?
  password         String
  birthday         DateTime?
  age              Int?
  phone            String?
  avatar           String?
  resetToken       String?
  resetTokenExpiry Int?
  fav_exercises    Exercise[]
}

